<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="144dp"
        android:layout_height="202dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_leuven" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="197dp"
        android:layout_height="99dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center"
        android:hapticFeedbackEnabled="false"
        android:text="@string/Welcome_text"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/language_select_plz"
        android:layout_width="409dp"
        android:layout_height="78dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="216dp"
        android:gravity="center"
        android:text="@string/language_select"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/language_select" />

    <ImageButton
        android:id="@+id/englishSelect"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="56dp"
        android:background="#FFFFFF"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/language_select_plz"
        app:srcCompat="@drawable/brittish_flag" />

    <ImageButton
        android:id="@+id/dutchSelect"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:background="#FFFFFF"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@+id/englishSelect"
        app:layout_constraintStart_toEndOf="@+id/englishSelect"
        app:layout_constraintTop_toTopOf="@+id/englishSelect"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/dutch_flag" />

    <ImageButton
        android:id="@+id/frenchSelect"
        android:layout_width="150dp"
        android:layout_height="116dp"
        android:layout_marginTop="36dp"
        android:background="#FFFFFF"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="@+id/englishSelect"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/englishSelect"
        app:layout_constraintTop_toBottomOf="@+id/englishSelect"
        app:srcCompat="@drawable/french_flag" />

    <ImageButton
        android:id="@+id/spanishSelect"
        android:layout_width="150dp"
        android:layout_height="103dp"
        android:background="#FFFFFF"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@+id/frenchSelect"
        app:layout_constraintEnd_toEndOf="@+id/dutchSelect"
        app:layout_constraintStart_toStartOf="@+id/dutchSelect"
        app:layout_constraintTop_toTopOf="@+id/frenchSelect"
        app:srcCompat="@drawable/flag_spain" />
</androidx.constraintlayout.widget.ConstraintLayout>